<%= form_for @project do |f| %>
    <div class="form-group">
        <%= f.label :name, "Project Name" %>
        <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :description, "Description" %>
        <%= f.text_field :description, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :cover_image_url, "Image URL" %>
        <%= f.text_field :cover_image_url, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :featured %>
        <%= f.number_field :featured, class:"form-control" %>
    </div>
    <div class="my-2">
        <%= f.submit %>
    </div>
<% end %>
